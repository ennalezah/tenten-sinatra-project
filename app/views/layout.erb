<!DOCTYPE html>
  <html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>TenTen | What Do You Recommend?</title>
    <%# <link rel="stylesheet" href="./views/stylesheets/main.css" type="text/css"> %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.7.5/css/bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>

    <style>
      .no-whitespace {
        padding: 0;
        margin: 0;
      }
      a, a:hover {
        color: #9A1B27;
      }
      a:hover {
        text-decoration: underline;
      }
      hr {
        background-color: #363636;
      }
      .logo:hover {
        text-decoration: none;
      }
      .main-footer {
        padding: 3rem 1.5rem;
        background-color: #FFF;
      }
      .page-section {
        background-color: rgba(228,218,206,0.45)
      }

      /* Buttons */
      .cta-btn {
        background: #E5BB4B;
        color: #363636;
        border: 2px solid #E5BB4B;
      }
      .cta-btn:hover {
        background: #F2DD66;
        color: #363636;
        border: 2px solid #F2DD66;
      }
      .submit-btn {
        background-color: rgb(73,142,175);
        border: none;
        color: #FFF;
        margin: 30px 0;
      }
      .submit-btn:hover {
        background-color: rgba(73,142,175,0.8);
        border: none;
        color: #FFF;
        text-decoration: underline;
      }
      .delete-btn {
        background-color: rgb(154,27,39);
        border: none;
        color: #FFF;
      }
      .delete-btn:hover {
        background-color: rgba(154,27,39,0.8);
        border: none;
        color: #FFF;
        text-decoration: underline;
      }
      .button.category-btn, .button.category-btn:hover, .button.category-btn:active {
        color: #9A1B27;
        border: transparent;
      }
      .button.is-text {
        text-decoration: none;
      }
      .button.is-text:hover, .button.category-btn:hover, .button.is-danger:hover {
        text-decoration: underline;
      }

      /* INDEX PAGE */
      .hero.index {
        background: linear-gradient(0deg,rgba(0,0,0,0.35),rgba(0,0,0,0.3)), url(https://lh6.googleusercontent.com/8LeP5HcO6i6jThGBQyuyoD5nOiZhPU_1nqusH8wvSHvd-97y0oHESMw8KaI=w2400) center / cover;
      }
      .container.index {
        margin: 20px 0;
      }
      .categories {
        min-height: 100%;
        padding: 6rem 0;
      }
      .categories-icon {
        color: #9A1B27;
      }
      .index-info-cols {
        background: #E4DACE;
      }
      .middle {
        background: #FFF;
      }
      .column.index-top-img {
        background: url(https://lh6.googleusercontent.com/Zb0Ti7VQXHO5ajWalHgR_bf4acxRwA0LwqLoXqhEVK2Nr8SwSpo1tA4iUH8=w2400) center / cover;
        min-height: 50vh;
        width: 100%;
      }
      .column.index-middle-img {
        background: url(https://lh5.googleusercontent.com/VNLxmlTGCrVuCdh-Hfr2PWccBORK98ixxvgj5ckQ-60pjMUGRNgBtX-cdMA=w2400) center / cover;
        min-height: 50vh;
        width: 100%;
      }     
      .column.index-bottom-img {
        background: url(https://lh3.googleusercontent.com/E13pUGY0a14IVmAU_vR9aWec_Mc82Pn0JXbVF6V46_MOwVA3NeCOgoKQ4sQ=w2400) center / cover;
        min-height: 50vh;
        width: 100%;
      }    

      /* LOGIN PAGE */
      .hero.login {
        background: url(https://lh5.googleusercontent.com/fz4psbz-UYdvANAqpcK_ZtntdEdcZ6SaLTergOMnu97aq4rDVSv3PMJPepg=w2400) bottom / cover;
      }
      .login-form {
        background: rgba(255,255,255,0.95);
        padding: 4rem 2.5rem;
        margin: 0 auto;
      }
      .field {
        margin: 20px 0;
      }

      /* SIGN UP PAGE */
      .hero.signup {
        background: url(https://lh4.googleusercontent.com/TN8ty-Hk6X2v-YvkwITK7H6nBvjxm6NlLgXmiSrLin100gE6LR6CaXi3Lm4=w2400) bottom / cover;
      }      
    </style>


  </head>
  <body>
  <div class="container">
      <nav class="navbar main-navbar" role="navigation" aria-label="main navigation">
        <div class="navbar-brand">
          <a class="navbar-item logo" href="/">
            <img src="https://lh6.googleusercontent.com/20Q6_dej013WYcw5n3G4dDGM-3PAHUu-sGr_RUd-_pozLYD2KlNAQBlce6w=w2400">&nbsp;
            <h1 class="title is-5 has-text-weight-bold">TenTen</h1>
          </a>

          <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>
        </div>
        <div id="navbarBasicExample" class="navbar-menu">
          <div class="navbar-start"></div>
          <div class="navbar-end">
            <div class="navbar-item">
              <div class="buttons">
                <% if logged_in? %>
                  <a class="button is-text has-text-weight-semibold" href="/posts/dashboard">Home</a>
                  <a class="button is-text has-text-weight-semibold" href="/posts/new">Create New Post</a>
                  <a class="button is-text has-text-weight-semibold" href="/posts/im-feeling-lucky">I'm Feeling Lucky</a>
                  <a class="button is-text has-text-weight-semibold" href="/logout">Log Out</a>
                <% else %>
                  <a class="button is-text" href="/login">Log In</a>
                  <a class="button cta-btn has-text-weight-medium" href="/signup">Sign Up</a>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </div>

    <%= yield %> 

    <footer class="footer main-footer">
      <div class="content has-text-centered has-text-dark">
        <p class="has-text-weight-semibold">&copy; 2019 TenTen by Hazel Anne Villareal</p>
      </div>
    </footer>

    
    <script>
      document.addEventListener('DOMContentLoaded', () => {
        (document.querySelectorAll('.notification .delete') || []).forEach(($delete) => {
          $notification = $delete.parentNode;
          $delete.addEventListener('click', () => {
            $notification.parentNode.removeChild($notification);
          });
        });
      });

      document.addEventListener('DOMContentLoaded', () => {
        // Get all "navbar-burger" elements
        const $navbarBurgers = Array.prototype.slice.call(document.querySelectorAll('.navbar-burger'), 0);
        // Check if there are any navbar burgers
        if ($navbarBurgers.length > 0) {
          // Add a click event on each of them
          $navbarBurgers.forEach( el => {
            el.addEventListener('click', () => {
              // Get the target from the "data-target" attribute
              const target = el.dataset.target;
              const $target = document.getElementById(target);
              // Toggle the "is-active" class on both the "navbar-burger" and the "navbar-menu"
              el.classList.toggle('is-active');
              $target.classList.toggle('is-active');
            });
          });
        }
      });    
    </script>
  </body>
</html>
