<section class="section page-section">
  <div class="container">
  <h3 class="title">Are you sure you want to delete your account?</h3>
  <p class="subtitle">There's no going back once you do.</p>
    <form action="/users/<%= @user.slug %>" method="POST">
      <div class="field">
        <div class="control">
          <input type="hidden" name="_method" value="DELETE">
          <input class="button is-danger" type="submit" value="I'm sure. Delete my account.">
        </div>
      </div>  
    </form>
  </div>
</section>