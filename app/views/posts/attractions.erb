<section class="section page-section">
  <div class="container">
    <h1 class="title">Hello, @<%= current_user.username %>!</h1>
    <p class="subtitle is-6"><a href="/users/<%= current_user.username %>">View your profile</a></p><hr>

    <div class="columns">
      <div class="column is-one-quarter">    
        <h3 class="title is-6 has-text-weight-bold">Browse by Category</h3>
        <p>
          <a href="/posts/attractions" class="button is-text is-active">Attractions</a><br>
          <a href="/posts/bars" class="button is-text">Bars</a><br>
          <a href="/posts/beauty-and-spas" class="button is-text">Beauty & Spas</a><br>
          <a href="/posts/cafes-and-bakeries" class="button is-text">Cafes & Bakeries</a><br>
          <a href="/posts/museums" class="button is-text">Museums</a><br>
          <a href="/posts/nightlife" class="button is-text">Nightlife</a><br>
          <a href="/posts/parks-and-recreation" class="button is-text">Parks & Recreation</a><br>
          <a href="/posts/restaurants" class="button is-text">Restaurants</a><br>
          <a href="/posts/dashboard" class="button is-text">View All</a><br>        
        </p>
      </div>

      <div class="column">
        <h3 class="title">Category: Attractions</h3>
        <% @posts.each do |post| %>
          <div class="box">
            <article class="media">
              <div class="media-content">
                <div class="content">
                  <p>                  
                    <small><a href="/users/<%= post.user.username %>"><%= post.user.username %></a> recommended a(n) <%= post.category.downcase.singularize %></small><br><br>
                    <a href="/posts/<%= post.id %>" class="has-text-weight-bold"><%= post.title %></a><br>          
                    <%= post.description %>                
                  </p>
                </div>
              </div>
            </article>
          </div>
        <% end %>
      </div>  
    </div>
  </div>
</section>