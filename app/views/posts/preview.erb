<section class="section page-section">
  <div class="container">
    <p><%= @post.category %> recommended by <a href="/users/<%= @post.user.username %>"><%= @post.user.username %></a></p><br>

    <h3 class="is-size-3 has-text-weight-bold"><%= @post.location_name %></h3>
    <p class="is-size-5"><%= @post.description %></p><br>
    <p><strong><a href="<%= @post.url %>" target="_blank">Click here for more info.</a></strong></p>
    
    <hr>

    <div class="field is-grouped">
      <% if current_user.id == @post.user_id %>
        <p class="control">
          <button class="button submit-btn is-marginless">
            <a href="/posts/<%= @post.id %>/edit" class="has-text-white">Edit post</a>
          </button>
        </p>
        <p class="control">
          <button class="button">
            <a href="/posts/dashboard" class="has-text-black">Return to dashboard</a>
          </button>
        </p>
        <form action="/posts/<%= @post.id %>" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <p class="control">        
            <input class="button delete-btn has-text-white" type="submit" value="Delete">  
          </p>
        </form>
      <% end %>
    </div>
    
  </div>
</section>
